<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00F4F4F4"
    android:orientation="vertical">


    <RelativeLayout
        android:background="@drawable/card_background2"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:contentDescription="@string/todo"
                android:id="@+id/flag"
                tools:src="@drawable/japan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:padding="5dp"
                android:layout_alignParentStart="true" />
            <TextView
                style="@style/Title"
                tools:text="Japan - Tokyo"
                android:layout_marginStart="20dp"
                android:id="@+id/countryName"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/flag"
                tools:ignore="RelativeOverlap" />
            <ImageView
                android:contentDescription="@string/todo"
                android:id="@+id/btn_selected"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_signal"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:visibility="visible"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
